<MudButton 
    Color="Color.Transparent" 
    Variant="Variant.Text" 
    Style="width: 100%; height: 100%" 
    OnClick="() => ButtonClicked.InvokeAsync(File.Id)">
    <MudCard Style="width: 100%;">
        <MudCardHeader Style="padding: 6px;">
            <CardHeaderContent>
                <MudText
                    Typo="Typo.h6">
                    @File.Name
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent Style="padding-top: 0; padding-bottom: 0;">
            <MudCardMedia
                    Image="@($"assets/{File.Name}.png")"
                    Style="height: 20vh; border-style: solid; border-width: 1px; border-radius: 4px; border-color: #f0f8ff36;"/>
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudText Class="mud-width-full py-4 d-flex align-center justify-start">
                        @File.Author
                    </MudText>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudRating
                        Class="mud-width-full py-4 d-flex align-center justify-end"
                        ReadOnly="true"
                        SelectedValue="@Convert.ToInt32(File.Rating)"/>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudButton>    
