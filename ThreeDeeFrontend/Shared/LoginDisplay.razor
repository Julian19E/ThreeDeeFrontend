<AuthorizeView>
    <Authorized>
        <a>@Localization.SharedLoginWelcomeText, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">@Localization.SharedLoginLogOut</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">@Localization.SharedLoginRegister</a>
        <a href="Identity/Account/Login">@Localization.SharedLoginLogIn</a>
    </NotAuthorized>
</AuthorizeView>